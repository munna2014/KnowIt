{
  "enabled": true,
  "name": "API Postman Testing",
  "description": "Monitors API source code changes in Laravel backend and Next.js frontend and automatically runs Postman collection tests to validate functionality",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "backend/app/Http/**/*.php",
      "backend/routes/*.php",
      "backend/config/*.php",
      "backend/app/Models/*.php",
      "frontend/app/**/*.js",
      "frontend/app/**/*.ts",
      "frontend/app/**/*.jsx",
      "frontend/app/**/*.tsx",
      "backend/composer.json",
      "frontend/package.json",
      "openapi.yaml",
      "openapi.yml",
      "swagger.yaml",
      "swagger.yml",
      "api.yaml",
      "api.yml"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "API source code or configuration has been modified. Please retrieve the contents of the .postman.json file. If the file does not exist or is empty, create a Postman collection for the API. If it exists, get the collection ID and run the collection, showing me the results and propose fixes for any errors found."
  }
}